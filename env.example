# =============================================
# AuditFlow Environment Variables
# Copy this file to .env.local and fill in the values
# =============================================

# ===================
# Clerk Authentication
# ===================
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Clerk Webhook Secret (for syncing users/orgs to Supabase)
# Get this from: Clerk Dashboard -> Webhooks -> Add Endpoint
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# ===================
# Supabase Database
# ===================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# For Drizzle ORM (optional, uses Supabase connection string)
DATABASE_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# ===================
# App Configuration
# ===================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===================
# Stripe (Optional - for billing)
# ===================
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx
# BILLING_PLAN_ENV=dev
